@using LudwigALM.Models.ViewModels

@model BankRepositoryViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ludwig's Bank</h1>
    <div>
        @foreach (var customer in Model.Customers)
        {
            <h2>Customer #@customer.CustomerId, Namn @customer.Name</h2>

            @foreach (var account in customer.Accounts)
            {
                <p>Account: #@account.AccountId, Balance: @account.Balance SEK</p>
            }
        }
    </div>
</div>
